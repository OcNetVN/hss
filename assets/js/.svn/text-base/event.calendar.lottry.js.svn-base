    $.ajax({
        type:"POST",
        url:"home_controller/get_agent_statement",
        dataType:"text",
        data: {
                page: page,
                date: date                              
                },
        cache:false,
        success:function (data) {
            get_agent_statement1_Complete(data);
        },
        error: function () { alert("Error!"); $("body").removeClass("loading");}
